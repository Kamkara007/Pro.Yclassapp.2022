<% @title="Se Connecter" %>
<div class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col lg:flex-row-reverse">
        <div class="text-center lg:text-left">
            <h1 class="text-xl md:text-5xl font-bold">La page de connexion !</h1>
            <p class="py-6">Provident cupiditate voluptatem et in. Quaerat fugiat ut assumenda excepturi exercitationem quasi. In deleniti eaque aut repudiandae et a id nisi.</p>
            <%= render "devise/shared/links" %>

        </div>
        <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|  %>
                <div class="card-body">
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">N° Matricule</span>
                        </label>
                        <%= f.text_field :logged, autofocus: true, autocomplete: "logged",
                            placeholder:"tapez ton N° Matricule ...", 
                            class:"input input-bordered" %>

                    </div>
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">N° Tel</span>
                        </label>

                        <%= f.password_field :password, autocomplete: "current-password", class:"input input-bordered", placeholder:"tapez ton N° tel" %>
                        <label class="label">
                            <a href="#" class="label-text-alt link link-hover">Je n'arrive pas à me Connecter?</a>
                        </label>
                    </div>
                    <div class="form-control my-6">
                        <%= f.submit "Se Connecter", disable_with: 'Se Connectering...', class:"sign py-3 font-bold" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

